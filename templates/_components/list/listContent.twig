{# >>> Comp Defaults #}
{% set compDefaults = {
  data: {
    name: 'c-listContent',
    slides: null,
    destroyBreakpoint: null
  },
  classes: {
    root: '',
    custom: '',
    contentWrapper: 'group grid grid-cols-1 md:grid-cols-2 gap-8 md:space-y-0 py-4 items-center',
  }
} %}

{# >>> Merge data / classes / variants (optional) #}
{% set props = {
  data: data is defined and data is iterable ? compDefaults.data | merge(data) : compDefaults.data,
  classes: classes is defined and classes is iterable ? compDefaults.classes | merge(classes) : compDefaults.classes,
} %}

{# Component #}
<div class="{{ props.data.name }} {{ props.classes.root }} {{ props.classes.custom }}">
  {% for item in props.data.slides %}
    <div class="{{ props.classes.contentWrapper }}">
      <div class="col-span-1 order-2 md:order-1 md:group-even:order-2">
        {{ include('_components/text/textBlockHeadline.twig', {
          data: {
            headline: item.textTitle ??? null,
            text: item.textDescription ??? null,
            variantSize: 'md',
          },
          classes: {
            custom: ''
          }
        }, withContext = false) }}
      </div>

      <div class="col-span-1 order-1 md:order-2 md:group-even:order-1 ">
        {# Image #}
        {% if item.assetImages ??? null %}
          {% set viewMode = item.imagesViewMode %}

          {% if viewMode == 'single' %}
            {{ include('_components/image/image.twig', {
              data: {
                image: item.assetImages.one() ?? null,
                aspectRatio: 'aspect-square',
                transform: 'auto',
                caption: 0,
                objectFit: 'cover',
                lazy: false
              },
              classes: {
                custom: ''
              }
            }, withContext = false) }}
          {% endif %}

          {% if viewMode == 'grid2Cols' or viewMode == 'grid3Cols' %}
            {% set cols = 2 %}
            {% if viewMode == 'grid3Cols' %}
              {% set cols = 3 %}
            {% endif %}

            {{ include('_components/grid/images.twig', {
              data: {
                images: item.assetImages ??? null,
                columns: cols ??? 2,
                caption: item.showImageCaption ??? null,
                aspectRatio: item.imageRatio.value ??? 'aspect-landscape',
                lazy: true,
              },
              classes: {
                custom: 'col-span-1 auto-rows-max aspect-auto'
              }
            }, withContext = false) }}
          {% endif %}
        {% endif %}

        {% if viewMode == 'gallery' %}
          {{ include('_components/gallery/images.twig', {
            data: {
              images: item.assetImages ??? null,
              lazy: true,
            },
            classes: {
              custom: ''
            }
          }, withContext = false) }}
        {% endif %}

        {% if viewMode == 'slider' %}
          {{ include('_components/slider/sliderImages.twig', {
            data: {
              slides: item.assetImages ??? null,
              aspectRatio: item.imageRatio.value ??? 'aspect-landscape',
              slidesPerView: 1
            },
          }, withContext = false) }}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>
